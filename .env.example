# =============================================================================
# API TRANSCRICAO - CONFIGURATION
# =============================================================================

# Server Configuration
PORT=3000
NODE_ENV=development

# API Keys (REQUIRED)
X_API_KEY=your-secure-api-key-here
OPENAI_API_KEY=sk-your-openai-key-here

# Audio Processing Configuration
CHUNK_TIME=900
SPEED_FACTOR=2.0
MAX_FILE_SIZE_MB=500
ALLOWED_AUDIO_FORMATS=mp3,wav,m4a,ogg,flac,aac

# Directories
TEMP_DIR=./temp
OUTPUT_DIR=./output
LOGS_DIR=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10

# Transcription Configuration
MAX_RETRIES=5
INITIAL_RETRY_DELAY=1000
CONCURRENT_CHUNKS=4
REQUEST_TIMEOUT=600000

# CORS Configuration (comma-separated origins or '*' for all)
CORS_ALLOW_ORIGINS=*

# Logging Configuration
LOG_LEVEL=info

# Cleanup Configuration
AUTO_CLEANUP_TEMP_FILES=true
TEMP_FILE_MAX_AGE_HOURS=24

# =============================================================================
# PRODUCTION EXAMPLE:
# =============================================================================
# NODE_ENV=production
# X_API_KEY=prod-secure-key-xyz123
# OPENAI_API_KEY=sk-prod-openai-key
# CORS_ALLOW_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
# LOG_LEVEL=warn
# =============================================================================